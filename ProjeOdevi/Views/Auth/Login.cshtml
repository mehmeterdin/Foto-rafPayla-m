@model ProjeOdevi.ViewModels.AuthLogin
@{
    ViewBag.Title = "Login Page";
}

<div class="container">
    <h1>Login Page</h1>

    @using (Html.BeginForm()) //<form method="post">
    {

        @Html.ValidationSummary()




        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
        </div>

        <div>

            <input type="submit" value="Login" class="btn btn-primary" />
            <a href="@Url.RouteUrl("Register")"><input type="button" value="Register" class="btn btn-secondary" /></a>
        </div>
    }
</div>
