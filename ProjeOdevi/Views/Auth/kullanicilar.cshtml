@model ProjeOdevi.ViewModels.KisiIndex
@{
    ViewBag.Title = "Kullanıcılar";
}
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kisi in Model.Kisiler)
                {

                    <tr>
                        <td>@kisi.Username</td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Takip",new { kisi.Id })" class="btn btn-xs btn-primary">Follow</a>
                            </div>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>